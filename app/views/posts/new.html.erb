<% provide(:title, 'New Post') %>
<h1>Create a Post</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@post, url: posts_url) do |f| %>

      <%= f.label :title %>
      <%= f.text_field :title, class: 'form-control' %>

      <%= f.label :body, 'Say what?' %>
      <%= f.text_area :body, class: 'form-control' %>

      <%= f.submit 'Post It!', class: 'btn btn-members' %>
    <% end %>
  </div>
</div>
