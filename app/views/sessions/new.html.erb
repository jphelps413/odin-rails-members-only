<% provide(:title, 'Log In') %>
<h1>Log In</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(:session, url: login_path) do |f| %>

      <%= f.label :email %>
      <%= f.email_field :email, :value => 'lana@example.com',
                                  class: 'form-control' %>

      <%= f.label :password %>
      <%= f.password_field :password, :value => 'foobar', class: 'form-control' %>

      <%= f.submit 'Log In', class: 'btn btn-members' %>
    <% end %>
  </div>
</div>
